# Anthropic Claude API
ANTHROPIC_API_KEY=your_claude_api_key_here

# Venice AI (for direction decision)
VENICE_API_KEY=your_venice_api_key_here
VENICE_ENDPOINT=https://api.venice.ai/api/v1/chat/completions
VENICE_MODEL=mistral-31-24b

# Hyperliquid (optional for SDK)
HYPERLIQUID_API_KEY=
HYPERLIQUID_SECRET=
HYPERLIQUID_BASE_URL=
HYPERLIQUID_TESTNET=true

# Wallet (required for live trading)
PRIVATE_KEY=0xyour_private_key_here
WALLET_ADDRESS=
ACCOUNT_ADDRESS=
RPC_URL=

# Trading config
TRADING_PAIR=ETH
TIMEFRAME=5m
BIAS_TIMEFRAME=15m
CANDLE_LIMIT=350
BIAS_CANDLE_LIMIT=100
MAX_POSITION_FRACTION=0.95
MAX_TRADES_PER_HOUR=2
COOLDOWN_MINUTES=10

# Multi-timeframe settings
REQUIRE_TIMEFRAME_ALIGNMENT=true
BIAS_LOOKBACK=20

# Volatility gate settings
ENABLE_VOLATILITY_GATE=true
ATR_PERIOD=14
ATR_COMPRESSION_THRESHOLD=0.75
REQUIRE_VOLATILITY_EXPANSION=true

# Time filter settings
ENABLE_TIME_FILTER=true
TIMEZONE=America/New_York

# Session context settings
ENABLE_SESSION_CONTEXT=true
SESSION_START_HOUR=9
SESSION_START_MINUTE=30

# Execution settings
ENTRY_MODE=break_retest
STOP_ATR_MULTIPLIER=1.5
MIN_RR_RATIO=2.0
TIME_STOP_CANDLES=8

# Risk controls
DAILY_LOSS_LIMIT_PCT=0.06
PAUSE_CONSECUTIVE_LOSSES=3
PAUSE_DURATION_HOURS=24
SHUTDOWN_DURATION_HOURS=24
VOLATILITY_THRESHOLD_PCT=0.02

# Paper mode
PAPER_MODE=true
PAPER_INITIAL_EQUITY=10000

# Telegram (optional)
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# Stats preferences
STATS_COUNT_PARTIALS_AS_WINS=true
STATS_BASIS=net
INCLUDE_FEES_IN_STATS=true
